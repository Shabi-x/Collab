{
  "installCommand": "pnpm install",
  "outputDirectory": "build",
  "buildCommand": "npm run build:vercel",
  "builds": [
    { "src": "build/server.js", "use": "@vercel/node" },
    { "src": "build/static/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "build/server.js"
    },
    {
      "src": "/",
      "dest": "build/static/index.html"
    },
    {
      "src": "/(.+)",
      "dest": "build/static/$1"
    }
  ]
}
